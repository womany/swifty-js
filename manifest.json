{
  "manifest_version": 3,
  "name": "Swifty",
  "description": "I am confident, swift and pretty!",
  "version": "1.0",
  "permissions": [
    // "*://*/*",
    "*://localhost/",
    "tabs" // for facebook login
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "js/jquery.min.js",
        "js/front.js"
      ],
      "css": [
        "css/front.css"
      ]
    }
  ],
  "browser_action": {
     "default_icon": "images/icon48.jpg",
     "default_title": "Swifty",
     "default_popup": "html/popup.html"
   },
  "background": {
    "scripts": [
      "js/jquery.min.js",
      "js/fb.js",
      "js/popup.js"
    ]
  }
}
